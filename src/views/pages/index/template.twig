{% extends "../../layouts/base.twig" %}
{% from "../../patterns/card.twig" import card %}

{% block page %}
  <div class="container layout__container">
    <section class="section section--main layout__main">
      <h1 class="section__title">Главное</h1>
      <div class="section__container main__container">
        <article class="main__article">
          <h1 class="main__title">Привет, Геннадий!</h1>
          <p class="main__subtitle">Двери и окна закрыты, сигнализация включена.</p>
          <section class="main__status">
            <dl>
              <dt>Дома</dt>
              <dd>+23</dd>
            </dl>
            <dl>
              <dt>За окном</dt>
              <dd>+19<span class="svg-icon" name="cloud-drizzle"></span></dd>
            </dl>
          </section>
        </article>
        <section class="main__section main-devices-pager__container">
          <div class="main-devices-pager__wrapper">
            <div class="main-devices-pager__page">

              {% for device in mainDevices %}
                <div class="main-devices-pager__card-holder">
                  {{ card(device, 'device') }}
                </div>
              {% endfor %}

            </div>
          </div>
        </section>
      </div>
    </section>
    <section class="section layout__actions">
      <h1 class="section__title">Избранные сценарии</h1>
      <div class="actions-pager__buttons-wrapper">
        <button id="actions-page-prev">&lt;</button>
        <button id="actions-page-next">&gt;</button>
      </div>
      <div class="section__container actions-pager__container">
        <div class="actions-pager__wrapper">
          <div class="actions-pager__page">

            {% for action in actions %}
              <div class="actions-pager__card-holder">
                {{ card(action, 'action') }}
              </div>
            {% endfor %}

          </div>
        </div>
      </div>
    </section>
    <section class="section layout__devices">
      <h1 class="section__title">Избранные устройства</h1>
      <div class="devices-pager__buttons-wrapper">
        <button id="devices-page-prev">&lt;</button>
        <button id="devices-page-next">&gt;</button>
      </div>
      <div class="section__container devices-pager__container">
        <div class="devices-pager__wrapper">
          <div class="devices-pager__page">

            {% for device in devices %}
              <div class="devices-pager__card-holder">
                {{ card(device, 'device') }}
              </div>
            {% endfor %}

          </div>
        </div>
      </div>
    </section>

  </div>
{% endblock %}
